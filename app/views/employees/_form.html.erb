<%= simple_nested_form_for @employee, html: { class: 'form-horizontal' } do |e_f| %>
  <div class="row">
    <div class="span7">
      <fieldset>
        <legend><%= controller.action_name.capitalize %> Employee</legend>

        <%= render :partial => "employee_fields", :locals => { :f => e_f } %>

        
      </fieldset>
    </div>
    <div class="span5">
      <legend>User Information</legend>
      <div id="user_details">
        <%= e_f.simple_fields_for :user do |user_f| %>
          <%= render :partial => "user_fields", :locals => { :f => user_f } %>
        <% end %>
        
      </div>
    </div>
  </div>
  <div class="form-actions">
      <%= e_f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', employees_path, :class => 'button alert radius' %>
  </div>
<% end %>