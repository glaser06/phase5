<% if @flavors_for_store.empty? %>
  <p><em>There are no flavors at all</em></p>
<% else %>
  <h3>Store Flavors</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="225">Store Name</th>
        <th width="225">Flavor Name</th>
        
        
        <th width="75">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @flavors_for_store.each do |sf| %>
        <tr>
          <td><%= link_to sf.store.name, store_path(sf.store) %></td>
          <td><%= sf.flavor.name %></td>
          
          <td>
             <%= button_to 'Delete', sf, :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @flavors_for_store, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %> <p>&nbsp;</p>
<% end %>