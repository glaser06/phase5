<%= simple_form_for @shift_job, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Shift Job</legend>

    <%= f.input :shift_id, :collection => current_user.employee.current_assignment.store.shifts.past.all, :include_blank => false, input_html: {class: "avg"} %>
    <%= f.input :job_id, :collection => Job.active.alphabetical.all, :include_blank => false, input_html: {class: "avg"} %>
    
    

    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', home_path, :class => 'button alert radius' %>
      <%= link_to 'Add Job', new_job_path,:class => 'button radius' %>
    </div>
  </fieldset>
<% end %>