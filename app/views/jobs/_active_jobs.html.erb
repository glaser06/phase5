<% if @active_jobs.empty? %>
  <p><em>There are no active jobs</em></p>
<% else %>
  <h3>Jobs</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="225">Job Name</th>
        <th width="225">Job Description</th>
        
        
        <th width="75">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @active_jobs.each do |job| %>
        <tr>
          <td><%= link_to job.name, job_path(job) %></td>
          <td><%= job.description %></td>
          
          <td>
            <%= link_to(edit_job_path(job), class: 'button tiny radius warning') do %>
              &nbsp;Edit&nbsp;
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @active_jobs, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %> <p>&nbsp;</p>
<% end %>